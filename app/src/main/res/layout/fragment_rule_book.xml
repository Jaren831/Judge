<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="4dp"
    android:id="@+id/rulebook_container"
    tools:context="com.example.android.judge.RuleBook.RuleBookFragment">
    <Button
        android:id="@+id/basic_button"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:text="@string/basic_button"/>

    <Button
        android:id="@+id/comprehensive_button"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:text="@string/comprehensive_button" />
    <ProgressBar
        android:id="@+id/rule_progress_bar"
        android:visibility="gone"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="center"/>

</LinearLayout>
