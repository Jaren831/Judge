<android.support.design.widget.CoordinatorLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/player1_increment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="6dp"
        app:layout_anchor="@id/player1_life"
        app:layout_anchorGravity="center_vertical|right"/>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/player1_decrement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="6dp"
        app:layout_anchor="@id/player1_life"
        app:layout_anchorGravity="center_vertical|left"/>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/player2_increment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="6dp"
        app:layout_anchor="@id/player2_life"
        app:layout_anchorGravity="center_vertical|right"/>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/player2_decrement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="6dp"
        app:layout_anchor="@id/player2_life"
        app:layout_anchorGravity="center_vertical|left"/>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/match_container"
        android:orientation="vertical"
        android:divider="?android:dividerHorizontal"
        android:elevation="0dp"
        android:showDividers="middle"
        tools:context="com.example.android.judge.MatchFragment">

        <TextView
            android:id="@+id/player1_life"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="48sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/player2_life"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:textSize="48sp"
            android:textStyle="bold"/>

    </LinearLayout>



</android.support.design.widget.CoordinatorLayout>


